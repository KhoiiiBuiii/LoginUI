<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.PolicyOwnerPageControl" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="center">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Policy Owner Page" style="-fx-font-size: 16px;"/>

    <!-- Use HBox to arrange buttons horizontally -->
    <HBox spacing="10" alignment="center">
        <Button text="Update Info" onAction="#handleUpdateInfo"/>
        <Button text="View Claims" onAction="#handleViewClaims"/>
        <Button text="File Claim" onAction="#handleFileClaim"/>
        <Button text="Update Claim" onAction="#handleUpdateClaim"/>
        <Button text="Delete Claim" onAction="#handleDeleteClaim"/>
    </HBox>

    <!-- Sections for various functionalities -->
    <VBox fx:id="updateInfoSection" spacing="10" visible="false" managed="false">
        <Label text="Update Information" style="-fx-font-size: 14px;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Button text="Submit" onAction="#handleSubmitUpdateInfo" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
        </GridPane>
    </VBox>

    <VBox fx:id="viewClaimsSection" spacing="10" visible="false" managed="false">
        <Label text="View Claims" style="-fx-font-size: 14px;"/>
        <TextArea fx:id="claimsTextArea" prefRowCount="10" prefColumnCount="30" editable="false"/>
    </VBox>

    <VBox fx:id="fileClaimSection" spacing="10" visible="false" managed="false">
        <Label text="File Claim" style="-fx-font-size: 14px;"/>
        <TextArea fx:id="fileClaimTextArea" prefRowCount="10" prefColumnCount="30"/>
        <Button text="Submit" onAction="#handleSubmitFileClaim"/>
    </VBox>

    <VBox fx:id="updateClaimSection" spacing="10" visible="false" managed="false">
        <Label text="Update Claim" style="-fx-font-size: 14px;"/>
        <TextArea fx:id="updateClaimTextArea" prefRowCount="10" prefColumnCount="30"/>
        <Button text="Submit" onAction="#handleSubmitUpdateClaim"/>
    </VBox>

    <VBox fx:id="deleteClaimSection" spacing="10" visible="false" managed="false">
        <Label text="Delete Claim" style="-fx-font-size: 14px;"/>
        <TextArea fx:id="deleteClaimTextArea" prefRowCount="10" prefColumnCount="30"/>
        <Button text="Submit" onAction="#handleSubmitDeleteClaim"/>
    </VBox>
</VBox>
